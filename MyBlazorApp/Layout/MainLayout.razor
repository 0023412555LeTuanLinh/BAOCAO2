@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudText Typo="Typo.h5">Quản Lý Sản Phẩm</MudText>
    </MudAppBar>

    <MudDrawer Open="true" Elevation="1" ClipMode="DrawerClipMode.Always">
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Trang chủ</MudNavLink>
            <MudNavLink Href="/products" Icon="@Icons.Material.Filled.List">Sản phẩm</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>

</MudLayout>
