@using MudBlazor
@using MyBlazorApp.Models

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Product.Name" Label="Tên sản phẩm" Required="true" />
        <MudTextField @bind-Value="Product.Price" Label="Giá" Required="true" T="decimal" />
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Save">Lưu</MudButton>
        <MudButton Color="Color.Secondary" OnClick="Cancel">Hủy</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Product Product { get; set; } = new Product();

    void Save() => MudDialog.Close(DialogResult.Ok(Product));
    void Cancel() => MudDialog.Cancel();
}